use kutuphane;
create table Kutuphane(
kutuphane_no int not null identity(1,1) primary key,
kutuphane_ismi nvarchar(100),
aciklama nvarchar(150),
adres_No int foreign key (adres_No)references adresler(adres_No)
);
use kutuphane;
create table adresler(
adres_No int not null identity(1,1) Primary Key,
sehir nvarchar(30),
cadde nvarchar(100),
mahalle nvarchar(100),
bina_no int,
posta_kodu int,
ulke nvarchar(100),
);
use kutuphane;
create table kitaplar(
isbn int not null primary key,
sayfa_sayisi int,
kitap_adi nvarchar(100) not null,
yayin_tarihi nvarchar(100)
);
use kutuphane;
create table emanetler(
emanet_no int not null identity(1,1) primary key,
emanet_tarihi nvarchar(10),
teslim_tarihi nvarchar(10),
kutuphane_no int foreign key (kutuphane_no) references Kutuphane(kutuphane_no),
uye_no int foreign key (uye_no) references uyeler(uye_no),
isbn int foreign key (isbn) references kitaplar(isbn)
);
use kutuphane
create table uyeler(
uye_no int not null identity(1,1) Primary Key,
uye_adi nvarchar(50) not null,
uye_soyadi nvarchar(50) not null,
uye_eposta nvarchar(100),
uye_cinsiyet char(2),
uye_telefon nvarchar(100),
adres_No int Foreign Key(adres_No) REFERENCES
adresler(adres_No)
);
